doctype html
html(class="no-js", lang="en")
  block vars
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    title chatbot admin
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/darkly-bs.min.css")
    link(rel="stylesheet", href="/css/main.css")

  body&attributes(bodyAttributes? bodyAttributes : {})
    nav.navbar.navbar-default
        ul.nav.navbar-nav
          li.nav-home
            a(href="/") Triggers
          li.nav-admin
            a(href="/admin") Process
          li.nav-logout
            a#logout(href="#") Logout



    .container-fluid
      .row
        .col-xs-12.col-md-6
          block content

          .alert.alert-success(style="display:none")
          .alert.alert-info(style="display:none")
          .alert.alert-warning(style="display:none")
          .alert.alert-danger(style="display:none")

    script(src="https://cdn.socket.io/socket.io-1.4.5.js")
    script(src="/js/jquery-3.1.1.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/list.js/1.3.0/list.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/list.pagination.js/0.1.1/list.pagination.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/list.fuzzysearch.js/0.1.0/list.fuzzysearch.js")
    script(src="/js/main.js")